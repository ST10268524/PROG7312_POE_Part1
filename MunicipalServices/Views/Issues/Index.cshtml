@model IEnumerable<MunicipalServices.Models.Issue>
@{
    ViewBag.Title = "My Reports";
}

<div class="container mt-4 bg-light">
    <h2>Submitted Reports</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Reference</th>
                <th>Location</th>
                <th>Category</th>
                <th>Status</th>
                <th>Submitted</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.ReferenceNumber</td>
                    <td>@i.Location</td>
                    <td>@i.Category</td>
                    <td>
                        <span class="badge badge-@(i.Status == IssueStatus.Resolved ? "success" :
                                                                        i.Status == IssueStatus.InProgress ? "primary" :
                                                                        i.Status == IssueStatus.InQueue ? "warning" : "info")">
                        @i.Status
                    </span>
                </td>
                <td>@i.CreatedAt.ToLocalTime().ToString("g")</td>
                <td><a href="@Url.Action("Details", "Issues", new { id = i.Id })" class="btn btn-sm btn-info">Details</a></td>
            </tr>
                        }
        </tbody>
    </table>
</div>